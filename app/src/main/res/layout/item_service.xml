<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="14dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_service_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bg_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/graphik_trial_medium"
        android:gravity="center_vertical"
        android:text="@string/netflix"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_service_icon"
        app:layout_constraintEnd_toStartOf="@+id/ivCheckIcon"
        app:layout_constraintStart_toEndOf="@+id/iv_service_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_service_icon" />

    <ImageView
        android:id="@+id/ivCheckIcon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/bg_card"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#002FFF" />


</androidx.constraintlayout.widget.ConstraintLayout>
